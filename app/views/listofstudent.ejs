<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="css/nodestyle.css" />
</head>

<body>
    <form method="post" action="/edit_task">

        <table align="center" class="table table-bordered table-striped table-hover">
            <tr>
                <td>
                    <div>
                        <label>First Name:</label>


                    </div>

                </td>
                <td>

                    <div>
                        <label>Last Name:</label>

                    </div>

                </td>
                <td>

                    <div>
                        <label>email:</label>

                    </div>
                </td>
                <td>
                    <div>

                        <label>password:</label>

                    </div>

                </td>


            </tr>


            <% students.forEach(function(student){ %>

                <tr>
                    <td>
                        <div>

                            <input type="text" name="firstName" value="<%= student.firstName %>" />

                        </div>

                    </td>
                    <td>

                        <div>

                            <input type="text" name="lastName" value="<%= student.lastName %>" />

                        </div>

                    </td>

                    <td>
                        <div>


                            <input type="text" name="email" value="<%= student.email %>" />

                        </div>

                    </td>
                    <td>
                        <div>


                            <input type="text" name="password" value="<%= student.password %>" />

                        </div>

                    </td>

                    <td>
                        <div>


                            <input type="text" name="owner" value="<%= student.owner %>" />

                        </div>

                    </td>

                    <td>
                        <div>



                            <input type="submit" value="Update Task" style="width: 200px" />


                        </div>

                    </td>
                </tr>



                <% })%>

        </table>


    </form>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.bundle.min.js" integrity="sha384-6khuMg9gaYr5AxOqhkVIODVIvm9ynTT5J4V1cfthmT+emCG6yVmEZsRHdxlotUnm" crossorigin="anonymous"></script>
</body>

</html>